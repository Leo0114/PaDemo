---
import { Image } from "astro:assets";
import Weeks from "@assets/sr.webp";
import Rotary from "@assets/rotary.webp";
import sponsor from "@assets/sponsor.webp";
---

<div class="max-w-[1400px] mx-auto">
  <div class="flex flex-wrap -m-4">
    <div class="lg:w-1/3 sm:w-1/2 p-4">
      <div class="flex relative">
        <Image
          class={"absolute inset-0 w-full h-full object-cover object-center rounded-xl transition-all cursor-pointer"}
          transition:name="img"
          src={Weeks}
          alt={"Service Weeks"}
          quality={"mid"}
          format="avif"
          loading={"lazy"}
        />

        <a href={"/PaDemo/serviceWeeks"}>
          <div
            class="rounded-xl px-8 py-10 relative z-10 w-full border-4 dark:border-indigo-500 dark:bg-indigo-900
             border-indigo-800 bg-indigo-200 opacity-0 hover:opacity-100 transition-all duration-300"
          >
            <h1 class="title-font text-lg font-medium mb-3">
              Servicio Humanitario
            </h1>
            <p class="leading-relaxed">
              Los voluntarios vienen a Project Amigo para trabajar, conocer a
              los estudiantes y aprender más sobre la gente y la cultura de
              México.
            </p>
          </div>
        </a>
      </div>
    </div>

    <div class="lg:w-1/3 sm:w-1/2 p-4">
      <div class="flex relative">
        <Image
          class={"absolute inset-0 w-full h-full object-cover object-center rounded-xl transition-all cursor-pointer"}
          transition:name="img"
          src={sponsor}
          alt={"Sponsor Img"}
          quality={"mid"}
          format="avif"
          loading={"lazy"}
        />

        <a href={"/PaDemo/involved/Sponsors"}>
          <div
            class="rounded-xl px-8 py-10 relative z-10 w-full border-4 dark:border-indigo-500 dark:bg-indigo-900
             border-indigo-800 bg-indigo-200 opacity-0 hover:opacity-100 transition-all duration-300"
          >
            <h1 class="title-font text-lg font-medium mb-3">
              Patrocinadores corporativos
            </h1>
            <p class="leading-relaxed">
              Permite que Project Amigo sea tu socio internacional en servicio
              humanitario con experiencia y significado.
            </p>
          </div>
        </a>
      </div>
    </div>

    <div class="lg:w-1/3 sm:w-1/2 p-4">
      <div class="flex relative">
        <Image
          class={"absolute inset-0 w-full h-full object-cover object-center rounded-xl transition-all cursor-pointer"}
          transition:name="img"
          src={Rotary}
          alt={"Clubs Rotarios"}
          quality={"mid"}
          format="avif"
          loading={"lazy"}
        />

        <a href={"/PaDemo/involved/Rotarios"}>
          <div
            class="rounded-xl px-8 py-10 relative z-10 w-full border-4 dark:border-indigo-500 dark:bg-indigo-900
             border-indigo-800 bg-indigo-200 opacity-0 hover:opacity-100 transition-all duration-300"
          >
            <h1 class="title-font text-lg font-medium mb-3">Clubes rotarios</h1>
            <p class="leading-relaxed">
              Project Amigo debe tanto su nacimiento como su longevidad a las
              contribuciones de miles de rotarios y clubes rotarios.
            </p>
          </div>
        </a>
      </div>
    </div>
  </div>
</div>
