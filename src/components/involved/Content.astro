---
import { Image } from "astro:assets";
import { type CollectionEntry } from "astro:content";
type Props = {
  involved: CollectionEntry<"involved">[];
};
const { involved } = Astro.props;
---

<div class="max-w-[1400px] mx-auto">
  <div class="flex flex-wrap -m-4">
    {
      involved.map((invo) => {
        const route = `/PaDemo/involved/${invo.slug}`;
        return (
          <div class="lg:w-1/3 sm:w-1/2 p-4">
            <div class="flex relative">
              <Image
                class={
                  "absolute inset-0 w-full h-full object-cover object-center rounded-xl transition-all cursor-pointer"
                }
                transition:name="img"
                transition:persist
                src={invo.data.cover}
                alt={invo.data.coverAlt}
                quality={"mid"}
                format="avif"
                loading={"lazy"}
              />

              <a href={route}>
                <div
                  class="rounded-xl px-8 py-10 relative z-10 w-full border-4 dark:border-indigo-500 dark:bg-indigo-900
           border-indigo-800 bg-indigo-200 opacity-0 hover:opacity-100 transition-all duration-300"
                >
                  <h1 class="title-font text-lg font-medium mb-3">
                    {invo.data.title}
                  </h1>
                  <p class="leading-relaxed">{invo.data.intro}</p>
                </div>
              </a>
            </div>
          </div>
        );
      })
    }
  </div>
</div>
