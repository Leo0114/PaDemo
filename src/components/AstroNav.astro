---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import ThemeToggle from "@components/ThemeToggle";
import { Image } from "astro:assets";
import paLogo from "@assets/PaLogo.webp";

const navItems = [
  { title: "Get Involved", path: "/PaDemo/getInvolved" },
  { title: "Service Weeks", path: "/PaDemo/serviceWeeks" },
  { title: "Safety", path: "/PaDemo/safety" },
  { title: "About Us", path: "/PaDemo/aboutUs" },
  { title: "Contact", path: "/PaDemo/contact" },
];
---

<div class="shadow-sm">
  <div class="max-w-xl mx-auto">
    <header class="px-4 mx-auto lg:py-4 lg:px-6" transition:persist>
      <Astronav closeOnClick>
        <div
          class="mx-auto text-center mb-8 lg:mb-6 flex items-center justify-center lg:justify-between"
        >
          <a
            class="items-center flex text-5xl font-extrabold transition-all duration-300 dark:text-slate-300 text-slate-950"
            href="/PaDemo/"
            aria-label="PA home"
            role="link"
          >
            <div class="flex items-center">
              <span class="inline">Project Amigo</span>
              <Image
                alt="Pa logo"
                src={paLogo}
                quality="low"
                format="avif"
                loading="lazy"
                class="xl:w-1/12 w-1/6 md:block flex xl:ml-4 pt-2 mx-auto"
              />
            </div>
          </a>

          <div class="block lg:hidden px-4">
            <MenuIcon class="w-5 h-5" />
          </div>
        </div>
        <MenuItems class="hidden lg:flex">
          <div class="flex flex-col items-center justify-between md:flex-row">
            {
              navItems.map((item) => (
                <ul>
                  <li>
                    <a
                      href={item.path}
                      class="flex-row justify-center dark:text-slate-200 text-slate-950  transition-all cursor-pointer hover:bg-slate-300 dark:hover:bg-slate-700
      focus:ring-4 focus:outline-none focus:ring-[#1da1f2]/50 font-medium rounded-lg
       px-5 py-2.5 text-center inline-flex items-center dark:focus:ring-[#1da1f2]/55
        mr-2 mb2 hover:shadow-lg  duration-300 ease-in-out hover:scale-110 scale-90 gap-x-2 opacity-70 hover:opacity-100"
                      aria-label={item.title}
                    >
                      {item.title}
                    </a>
                  </li>
                </ul>
              ))
            }
          </div>
          <ThemeToggle client:load />
        </MenuItems>
      </Astronav>
    </header>
  </div>
</div>
