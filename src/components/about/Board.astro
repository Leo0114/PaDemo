---
import { Image } from "astro:assets";
import { type CollectionEntry } from "astro:content";
type Props = {
  about: CollectionEntry<"about">[];
};
const { about } = Astro.props;
---

<div
  class="text-center lg:text-left max-w-[1400px] mx-auto transition-all duration-300 dark:text-slate-300 text-slate-950"
>
  <div class="grid gap-6 md:grid-cols-3 xl:gap-x-12">
    {
      about.map((board) => {
        const route = `/PaDemo/about/${board.slug}`;
        return (
          <div class="mb-6 lg:mb-0">
            <a
              href={route}
              class=" relative block rounded-lg p-6  border shadow-md
               bg-slate-300/10  dark:hover:bg-slate-300/20 border-slate-200/50 hover:scale-105 dark:border-slate-300/50
                hover:bg-slate-200 dark:bg-slate-700/50 hover:border-slate-300/50 transition-all "
            >
              <div class="flex-row items-center lg:flex">
                <picture class="w-full shrink-0 grow-0 basis-auto lg:w-5/12 lg:pr-6 ">
                  <Image
                    class="mb-6 w-full lg:mb-0 rounded-lg"
                    transition:name="img"
                    transition:persist
                    src={board.data.cover}
                    alt={board.data.coverAlt}
                    quality={"mid"}
                    format="avif"
                    loading={"lazy"}
                  />
                </picture>

                <div class="w-full shrink-0 grow-0 basis-auto lg:w-7/12">
                  <h2 class="mb-2 text-xl font-bolde">{board.data.title}</h2>
                  <p class="mb-4 text-indigo-600 dark:text-indigo-400">
                    {board.data.position}
                  </p>
                </div>
              </div>
            </a>
          </div>
        );
      })
    }
  </div>
</div>
