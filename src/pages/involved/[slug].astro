---
import Botton from "@components/layout/Botton.astro";
import Return from "@components/layout/Return.astro";

import Layout2 from "@layouts/Layout2.astro";
import { Image } from "astro:assets";
import { type CollectionEntry, getCollection } from "astro:content";

export async function getStaticPaths() {
  const involved = await getCollection("involved");
  const paths = involved.map((invol) => {
    return {
      params: {
        slug: invol.slug,
      },
      props: {
        invol,
      },
    };
  });
  return paths;
}
type Props = { invol: CollectionEntry<"involved"> };
const { invol } = Astro.props;
---

<Layout2 title={invol.data.title}>
  <Return link="/PaDemo/serviceWeeks" />
  <div
    class="container my-24 mx-auto md:px-6 prose-xl transition-all duration-300 dark:text-slate-300 text-slate-950"
  >
    <section class="mb-32 items-center">
      <Image
        src={invol.data.cover}
        class="mb-6 lg:w-1/3 w-fit mx-auto rounded-lg shadow-lg dark:shadow-black/20"
        transition:name="img"
        alt={invol.data.coverAlt}
        quality={"mid"}
        format="avif"
        loading={"lazy"}
      />

      <div class="mx-auto px-4 text-center">
        <Botton
          name="Registrar aquÃ­"
          link="https://interland3.donorperfect.net/weblink/WebLink.aspx?name=E55454&id=19"
        />
      </div>
      <div class="mb-6 flex items-center">
        <div>
          <p class="dark:text-indigo-400 text-indigo-600">{invol.data.club}</p>
          <p>Encargado: {invol.data.intro}</p>
        </div>
      </div>
    </section>
    <h1 class="mb-6 text-3xl font-extrabold">
      {invol.data.title}
    </h1>

    <p>
      {invol.body}
    </p>
  </div>
</Layout2>
