---
import Return from "@components/layout/Return.astro";
import Layout2 from "@layouts/Layout2.astro";
import { Image } from "astro:assets";
import { type CollectionEntry, getCollection } from "astro:content";

export async function getStaticPaths() {
  const about = await getCollection("about");
  const paths = about.map((aba) => {
    return {
      params: {
        slug: aba.slug,
      },
      props: {
        aba,
      },
    };
  });
  return paths;
}
type Props = { aba: CollectionEntry<"about"> };
const { aba } = Astro.props;
---

<Layout2 title={aba.data.title}>
  <Return link="/PaDemo/aboutUs" />
  <section class="mx-auto lg:w-10/12 w-10/12 h-screen max-w-[1400px] pt-12">
    <div class="container mx-auto flex px-5 md:flex-row flex-col items-center">
      <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6 md:mb-0 mb-10">
        <Image
          transition:name="img"
          quality={"mid"}
          loading={"lazy"}
          format="avif"
          alt={aba.data.coverAlt}
          src={aba.data.cover}
          class="object-cover object-center rounded-lg shadow-md"
        />
      </div>

      <div
        class="lg:flex-grow md:w-1/2 lg:pl-24 md:pl-16 flex flex-col md:items-start md:text-left items-center text-center"
      >
        <h1
          class="title-font sm:text-4xl text-3xl mb-4 font-medium text-slate-50"
        >
          {aba.data.title}
        </h1>
        <h1>{aba.data.position}</h1>
        <a
          href="mailto:jorge@projectamigo.org"
          target="_blank"
          class="text-indigo-600 py-2">{aba.data.email}</a
        >
        <p
          class="prose-2xl mb-8 leading-relaxed text-lg text-justify text-slate-300"
        >
          {aba.body}
        </p>
      </div>
    </div>
  </section>
</Layout2>
